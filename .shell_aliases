alias vihosts="sudo vim /etc/hosts"
alias apt-get="sudo apt-get"
alias sshr="ssh -l root"
alias ufw="sudo ufw"
alias service="sudo service"
alias sc="service"
alias simplehttp="python -m SimpleHTTPServer"
alias dualscreen="xrandr | grep -q HDMI-1 && xrandr --output eDP-1 --auto --output HDMI-1 --auto --left-of eDP-1"
alias sgit="nohup smartgit <&- &"
